@page
@model LoginModel

@{
    ViewData["Title"] = "ENSAT Cours | Connexion";
}

<div class="white-background row text-white">
        <div class="col-md-5">
            <section>
                <form id="account" method="post">
                    <h4>Connectez-vous à votre compte</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Email institutionnel</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="nom.prenom@etu.uae.ac.ma" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Mot de passe</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" class="text-white" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                        </p>
                        @*<p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>*@
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-5 col-md-offset-2">
            <section>
                <h4>ENSAT Cours - Gestion des cours à distance</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                                            <center><img src="~/img/ENSATLogo.png" style="height:226px;" /></center>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
