@page
@model ProjetASP.NET.Pages.Modules.IndexModel
@{
    ViewData["Title"] = "Index";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<div class="border white-background">
    <div class="row">
        <div class="col-6">
            <h2 class="text-white">Modules</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-page="Create"><i class="fa fa-plus-square"></i> Ajouter un Module</a>
        </div>
    </div>

    <div>
        @if (Model.Modules.Count() == 0)
        {
            <p class="text-danger">Aucun module n'existe maintenant</p>
        }
        else
        {
            <table class="table text-white">
                <thead>
                    <tr>
                        <th>Id Module</th>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Elements</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Modules)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => item.IdModule)</td>
                        <td>@Html.DisplayFor(m => item.Code)</td>
                        <td>@Html.DisplayFor(m => item.Nom)</td>
                        <td>
                            <a asp-page="../Elements/Index" asp-route-IdModule="@item.IdModule" style="text-decoration:none;">
                                <i class="fa fa-th-list"></i> Voir eléments
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-route-id="@item.IdModule" asp-page="Delete" asp-page-handler="Delete"><i class="fa fa-trash"></i> Supprimer</a>
                            <a class="btn btn-success" asp-route-id="@item.IdModule" asp-page="Edit"><i class="fa fa-edit"></i> Modifier</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }


    </div>
</div>