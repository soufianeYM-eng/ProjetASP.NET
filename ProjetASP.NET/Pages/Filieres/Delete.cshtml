@page
@model ProjetASP.NET.Pages.Filieres.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<form method="post">
    <div class="white-background border text-white">
        <h2 class="text-white">Supprimer Filière</h2>
        <br />
        <hr />
        <div class="form-group row">
            <input type="hidden" asp-for="Filiere.IdFil" />
            <div class="col-6">
                <div class="mb-3">
                    <label asp-for="Filiere.Nom" class="form-label">Nom Filière</label>
                    <input type="text" class="form-control" asp-for="Filiere.Nom" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="Filiere.Abrev" class="form-label">Abréviation</label>
                    <input type="text" class="form-control" asp-for="Filiere.Abrev" readonly>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger">Supprimer</button>
                <a asp-page="Index" class="btn btn-success">Retour</a>
            </div>

        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
